<div id="add-post-form">
  <%= form_for @post, remote: true do |f| %>

    <%= f.label :title, "What it is?" %>
    <%= f.text_area :title, rows: 4, class: "form-control" %>
    <br>
    <%= f.label :body, 'What it?' %>
    <%= f.text_area :body, rows: 4, class: "form-control" %>
    <%= f.submit "Submit", class: "btn btn-default center-block" %>
  <% end %>
</div>
