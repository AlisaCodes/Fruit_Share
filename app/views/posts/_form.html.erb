<div id="add-post-form">
  <%= form_for @post do |f| %>

    <%= f.label :title, "title" %>
    <%= f.text_area :title, rows: 1, class: "form-control" %>
    <br>
    <%= f.label :body, 'say what?' %>
    <%= f.text_area :body, rows: 4, class: "form-control" %>
    <%= f.submit "Submit", class: "btn btn-default center-block" %>
  <% end %>
</div>
